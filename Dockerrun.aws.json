{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "rholtschneider2/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rholtschneider2/multi-worker",
            "hostname": "worker",
            "essential": false
        },  
        {
            "name": "server",
            "image": "rholtschneider2/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "rholtschneider2/multi-nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        }      
    ]

}